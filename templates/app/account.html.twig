{% extends 'layout/private.html.twig' %}

{% set activeMenu = 'home' %}

{% block title %}{{ 'menu.account'|trans }}{% endblock %}

{% block content %}
    <div class="container">
        <h1>{{ 'menu.account'|trans }}</h1>
        <div class="row">
            <div class="col">
                <h2>{{ 'account.infos'|trans }}</h2>
                Informations
            </div>
        </div>
        <div class="row">
            <div class="col">
                <h2>{{ 'account.otp_activation'|trans }}</h2>
                {% if user.twoFactorSecret is null %}
                    <a class="btn btn-primary" href="{{ path('two_factor.enable') }}">{{ 'security.otp.enable'|trans }}</a>
                {% else %}
                    <a class="btn btn-primary" href="{{ path('two_factor.disable') }}">{{ 'security.otp.disable'|trans }}</a>
                    <a class="btn btn-primary" data-toggle="collapse" href="#qrcode">{{ 'security.otp.see'|trans }}</a>
                {% endif %}
            </div>
        </div>
        {% if not user.twoFactorSecret is null %}
            <div class="row collapse {{ showqr is null ? '' : 'show' }}" id="qrcode">
                <div class="col-12">
                    <img src="{{ qr_code_path(otpUrl) }}" />
                </div>
                <div class="col-12">
                    <a class="btn btn-primary" href="{{ path('two_factor.enable') }}">{{ 'security.otp.generate_new'|trans }}</a>
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}
